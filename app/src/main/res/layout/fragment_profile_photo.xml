<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePhotoFragment">

    <ImageView
        android:id="@+id/iv_my_profile"
        android:layout_width="122sp"
        android:layout_height="122sp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_my_profile" />

    <ImageView
        android:id="@+id/iv_my_photo"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:src="@drawable/ellipse_14" />

</FrameLayout>